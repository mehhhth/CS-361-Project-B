<link href="provider.css" rel="stylesheet">
<div class="container">
  <!-- The justified navigation menu is meant for single line per list item.
       Multiple lines will require custom code not provided by Bootstrap. -->
  <div class="masthead">
    <h3 class="text-muted"></h3>
    <nav>
      <ul class="nav nav-justified">
        <li class="active"><a href="#">Check Beds</a></li>
        <li><a href="#">Find a Shower Truck</a></li>
        <li><a href="#">Calendar</a></li>
        <li><a href="#">Find Nearest Facility</a></li>
        <li><a href="#">About</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </nav>
  </div>
  
  </br>
  <div class="text">
    <h2><b>FACILITY INFO</b></h2> </br>
      <label>Create</label>
      <input type="radio" name="yesno" id="yesCheck"/>
      <label>Update</label>
      <input type="radio" name="yesno" id="noCheck"/> </br>
      <p>Use the below form to enter information about your facility/service: </p>
  </div>

  <form name="create" method = "post" id="ifYes" style="display:none;" class="form-signin">
    <h2>Create Facility</h2>
    <h3>Sleeping Facility Name</h3>
    <input type="string" id="createName" class="form-control" placeholder="Facility Name" required autofocus>
    </br>
    <h3> Total Number of Beds </h3>
    <input type="number" id="createBedT" class="form-control" placeholder="Available Beds" required>
    </br>
    <h3> Available Number of Beds </h3>
    <input type="number" id="createBedA" class="form-control" placeholder="Available Beds" required>
    </br>
    <button type="submit" id="submitCreate">Submit</button>
  </form>
  <form name="update" method = "post" id="ifNo" style="display:none;" class="form-signin">
    <h2>Update Facility</h2>
    <h3>Sleeping Facility</h3>
    <select id="updateID">
      {{#results}}
      <option value={{id}}>{{name}}</option>
      {{/results}}
    </select>
    </br>
    <h3> Total Number of Beds </h3>
    <input type="number" id="updateBedT" class="form-control" placeholder="Available Beds" required>
    </br>
    <h3> Available Number of Beds </h3>
    <input type="number" id="updateBedA" class="form-control" placeholder="Available Beds" required>
    </br>
    <button type="submit" id="submitUpdate">Submit</button>
  </form>
  <div id="response_text"></div>
  </br> </br>
</div>
<script type="text/javascript" src="provider.js"></script>